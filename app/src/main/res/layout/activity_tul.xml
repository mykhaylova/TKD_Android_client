<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-0.5"
        android:id="@+id/btnF1sendHalf"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@drawable/buttonred"
        android:layout_gravity="center|top"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnF2sendHalf"
        android:layout_alignEnd="@+id/btnF1send1"
        android:layout_marginEnd="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-0.5"
        android:id="@+id/btnF2sendHalf"
        android:textSize="30sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonblue"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnF2send1"
        android:layout_marginStart="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/btnF2send1"
        android:textSize="30sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonblue"
        android:drawableTint="@drawable/abc_btn_borderless_material"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnF2set0"
        android:layout_marginStart="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/btnF1send1"
        android:textSize="30sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonred"
        android:textColor="#ffffff"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/btnF2send1"
        android:layout_alignEnd="@+id/textIP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btnF2set0"
        android:textSize="30sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonblue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btnF1set0"
        android:textSize="30sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonred"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textIP"
        android:layout_gravity="center_horizontal"
        android:enabled="true"
        android:editable="true"
        android:text="192.168.1.100"
        android:textAlignment="center"
        android:layout_alignStart="@+id/btnF2send1"
        android:layout_toStartOf="@+id/btnF1set0"
        android:background="#bcb5b5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:background="#bad0ea"
        android:layout_alignBottom="@+id/btnF2set0"
        android:layout_alignStart="@+id/textIP"
        android:layout_toStartOf="@+id/btnF1set0"
        android:hint="Name" />

</RelativeLayout>
