<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/common_signin_btn_dark_text_disabled">

    <Button
        android:layout_width="240dp"
        android:layout_height="220dp"
        android:text="+1"
        android:id="@+id/btnBluePlusOne"
        android:maxWidth="100dp"
        android:minHeight="80dp"
        android:textSize="90sp"
        android:background="@drawable/buttonblue"
        android:layout_gravity="center|top"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_alignBottom="@+id/btnRedSetZero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/btnBlueSetZero"
        android:textSize="50sp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonblue"
        android:textColor="#ffffff"
        android:width="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnBluePlusOne" />
