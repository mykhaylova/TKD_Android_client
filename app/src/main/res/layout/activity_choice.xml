<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.doo.taekwon.taekwondoclient.ChoiceActivity"
    android:background="@color/common_signin_btn_dark_text_disabled">

    <Button
        android:layout_width="210dp"
        android:layout_height="133dp"
        android:text="Tul"
        android:id="@+id/btnTul"
        android:textSize="35dp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonblue"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:layout_width="210dp"
        android:layout_height="133dp"
        android:text="Sparring"
        android:id="@+id/btnSparring"
        android:textSize="35dp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:background="@drawable/buttonred"
        android:textColor="#ffffff"
        android:layout_above="@+id/btnExit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/buttonbluelight"
        android:onClick="clickExit"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
